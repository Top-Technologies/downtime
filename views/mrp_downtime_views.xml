<odoo>
    <record id="view_downtime_tree" model="ir.ui.view">
        <field name="name">mrp.downtime.tree</field>
        <field name="model">mrp.downtime</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="duration_hours"/>
                <field name="reason_id"/>
                <field name="responsible_user_ids" widget="many2many_tags"/>
                <field name="category"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_downtime_form" model="ir.ui.view">
        <field name="name">mrp.downtime.form</field>
        <field name="model">mrp.downtime</field>
        <field name="arch" type="xml">
            <form>
                <header>
                     <!-- Submit (Draft) -->
                    <button name="action_submit"
                            type="object"
                            string="Submit"
                            class="btn-primary"
                            modifiers="{
                                'invisible': [
                                    ('state', '!=', 'draft'),
                                    ('is_reporter', '=', False)
                                ]
                            }"/>

                    <!-- Edit -->
                    <button name="action_edit"
                            type="object"
                            string="Edit"
                            class="btn-secondary"
                            modifiers="{
                                'invisible': [
                                    ('state', '!=', 'submitted'),
                                    ('is_reporter', '=', False)
                                ]
                            }"/>

                    <!-- Update & Submit -->
                    <button name="action_submit"
                            type="object"
                            string="Update &amp; Submit"
                            class="btn-primary"
                            modifiers="{
                                'invisible': [
                                    ('state', '!=', 'submitted'),
                                    ('is_editable', '=', False),
                                    ('is_reporter', '=', False)
                                ]
                            }"/>

                    <!-- Approve -->
                    <button name="action_approve"
                            type="object"
                            string="Approve"
                            class="btn-success"
                            modifiers="{
                                'invisible': [
                                    ('state', '!=', 'submitted'),
                                    ('is_responsible', '=', False)
                                ]
                            }"/>

                    <field name="state" widget="statusbar"/>
                    
                </header>

                <sheet modifiers="{'readonly': [('is_editable', '=', False)]}">
                    <div class="alert alert-warning"
                        invisible="state != 'needs_update' or was_submitted == False">
                        âš  This downtime log was modified after submission.
                        Please click <b>Update &amp; Submit</b> to notify responsible users.
                    </div>

                    <group>
                        <group>
                            <field name="production_id" readonly="not is_editable"/>
                            <field name="reason_id" readonly="not is_editable" modifiers="{'readonly': [('is_editable','=',False)]}"/>
                            <field name="responsible_user_ids" widget="many2many_tags" readonly="1"/>
                            <field name="category" readonly="1"/>
                            <field name="reported_by"/>
                        </group>

                        <group>
                            <field name="start_time" readonly="not is_editable" modifiers="{'readonly': [('is_editable','=',False)]}"/>
                            <field name="end_time" readonly="not is_editable" modifiers="{'readonly': [('is_editable','=',False)]}"/>
                            <field name="duration_hours"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" readonly="not is_editable" modifiers="{'readonly': [('is_editable','=',False)]}"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
</odoo>
